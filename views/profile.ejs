<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>profile</title>
    <link rel="stylesheet" href="/stylesheets/profile.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  </head>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
  <script src="https://unpkg.com/imagesloaded@4/imagesloaded.pkgd.min.js"></script>
  <script src="https://unpkg.com/masonry-layout@4/dist/masonry.pkgd.min.js"></script>


  <body>
    <div class="profilecontainer">
      <div class="profilecard">
        <div class="profile-picture">
          <img src="https://i.pinimg.com/280x280_RS/fe/7d/ee/fe7deef834e1fafe56f8023ced803ca9.jpg" alt="Profile Picture">
        </div>
        <h2 class="name"><%= user.fullname%></h2>
        <h3 class="username">@<%= user.username%></h3>
        <p class="tagline">something....</p>
        <p class="description">About..</p>
        <a href="/logout" class="button">Logout</a>

        <form action="/upload" method="post" enctype="multipart/form-data">
          <input type="text" name="fileCaption" placeholder="Add caption">
          <input type="file" name="file">
          <button type="submit">Upload</button>
        </form>
      </div>
  </div>


    <div class='carousel-images'>
      <% user.posts.forEach(function(post) { %>
        <% var randomClass = getRandomClass(); %>
        <div class="<%= randomClass %> card_exp">
          <img class="img_card" src="/images/uploads/<%= post.image %>" alt="">
          <figcaption><%= post.imageText %></figcaption>
        </div>
      <% }); %>
    </div>

    <script>
      $(".grid").imagesLoaded(function() {
        $(".grid").masonry({
          itemSelector: ".grid-item"
        });
      });
    </script>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="/javascripts/profile.js"></script>
  </body>
</html>